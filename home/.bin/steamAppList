#!/bin/bash

STEAM_DIR="$HOME/.steam/steam/steamapps"
OUTPUT=()
SHOW_PATHS=0

_fn_help() {
    echo "Usage: $(basename $0) [OPTIONS]"
    echo "  -p, --path     Show game and workshop paths"
    echo "  -h, --help     Show this help message"
    exit 0
}

# Parse arguments
while [[ $# -gt 0 ]]; do
    case "$1" in
        -p|--path)
            SHOW_PATHS=1
            shift
            ;;
        -h|--help)
            _fn_help
            ;;
        *)
            _fn_help
            ;;
    esac
done

# Check if Steam directory exists
if [[ ! -d "$STEAM_DIR" ]]; then
    echo "Steam directory not found: $STEAM_DIR"
    exit 1
fi

# Find all .acf files and process them
while IFS= read -r file; do
    isProton=0
    appid=$(grep -m1 '"appid"' "$file" | sed -E 's/.*"appid"[[:space:]]*"([0-9]+)".*/\1/')
    name=$(grep -m1 '"name"' "$file" | sed -E 's/.*"name"[[:space:]]*"([^"]+)".*/\1/')
    appDir=$(grep -m1 '"installdir"' "$file" | sed -E 's/.*"installdir"[[:space:]]*"([^"]+)".*/\1/')

    appPath="$STEAM_DIR/common/$appDir"
    workshopPath="$STEAM_DIR/workshop/content/$appid"
    
    protonPath="$STEAM_DIR/compatdata/$appid"
    
    RESET='\033[0m'
    BOLD='\033[1m'

    appName=$(echo -e "\033[1;32m$name\033[0m")
    appPathLink=$(echo -e "\033]8;;$appPath\033\\$appPath\033]8;;\033\\")
    workshopLink=$(echo -e "\033]8;;$workshopPath\033\\$workshopPath\033]8;;\033\\")
    protonLink=$(echo -e "\033]8;;$protonPath\033\\$protonPath\033]8;;\033\\")

    if [[ -d "$protonPath" ]]; then
        echo -e "Proton path found: $protonPath"
        isProton=1
    fi

    if [[ $SHOW_PATHS -eq 1 ]]; then
        if [[ $isProton -eq 1 ]]; then
            OUTPUT+=("AppID: $(printf '%-12s' "$appid") $(printf '%-42s' "$appName")|||  $(printf '%-18s' "Path:")$appPathLink|||  $(printf '%-18s' "Workshop:")$workshopLink|||  $(printf '%-18s' "Proton:")$protonLink")
        else
            OUTPUT+=("AppID: $(printf '%-12s' "$appid") $(printf '%-42s' "$appName")|||  $(printf '%-18s' "Path:")$appPathLink|||  $(printf '%-18s' "Workshop:")$workshopLink")
        fi
    else
        OUTPUT+=("AppID: $(printf '%-12s' "$appid") $(printf '%-42s' "$appName")")
    fi

done < <(find "$STEAM_DIR" -type f -name 'appmanifest_*.acf')

# Sort and print
printf "%s\n" "${OUTPUT[@]}" | sort -k3 | sed 's/|||/\n/g'