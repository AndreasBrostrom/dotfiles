#!/bin/bash
_repoDir="$HOME/Repositories"
_configFile="$HOME/.config/sitrep.conf"

_status=()

_arg_update="false"
_arg_commit="false"
_arg_install="false"
_arg_install_force="false"

_error="false"
_has_changes="false"
_install_params=()

# Create config file if it doesn't exist
if [[ ! -f "$_configFile" ]]; then
    mkdir -p "$(dirname "$_configFile")"
    cat > "$_configFile" << 'EOF'
# Configuration file for sitrep
# Parameters to pass to install scripts

# Example: install_params = ["--none-i3", "--android", "--no-sudo"]
install_params = []
EOF
fi

# Read config file
if [[ -f "$_configFile" ]]; then
    # Parse install_params from config
    _params_line=$(grep "^install_params" "$_configFile" | sed 's/install_params[[:space:]]*=[[:space:]]*//')
    if [[ -n "$_params_line" ]]; then
        # Remove brackets and quotes, split by comma
        _params_line=$(echo "$_params_line" | sed 's/^\[\(.*\)\]$/\1/' | sed 's/"//g' | sed "s/'//g")
        if [[ -n "$_params_line" ]]; then
            IFS=',' read -ra _install_params <<< "$_params_line"
            # Trim whitespace from each parameter
            for i in "${!_install_params[@]}"; do
                _install_params[$i]=$(echo "${_install_params[$i]}" | xargs)
            done
        fi
    fi
fi

function showHelp() {
    echo "Usage: $(basename "$0") [OPTIONS]"
    echo ""
    echo "Options:"
    echo "  --upgrade, -u, --pull, -p      Update repositories if no changes are found"
    echo "  --commit, -c, --push, -pu      Commit and push changes to repositories"
    echo "  --install, -i                  Run install script for dotfiles"
    echo "  --force-install, -f, -fi -if   Force run install script for dotfiles"
    echo "  -h, --help                     Show this help message"
}

# Handle Arguments
while [[ $# -gt 0 ]]; do
    case "$1" in
        --upgrade|-u|--pull|-p)
            _arg_update="true"
            ;;
        --commit|-c|--push|-pu)
            _arg_commit="true"
            ;;
        --install|-i)
            _arg_install="true"
            ;;
        --force-install|-f|-fi|-if)
            _arg_install_force="true"
            ;;
        --help|-h)
            showHelp
            exit 0
            ;;
        *)
            echo -e "\e[31mError: Unknown argument '$1'\e[0m"
            echo ""
            showHelp
            exit 1
            ;;
    esac
    shift
done

echo -e "\e[1mChecking dotfile repo status\e[0m"
if [[ ! -d "$_repoDir" ]]; then
    echo "Repositories directory not found..."
    exit 1
else
    pathString=("\e]8;;$_repoDir\a$_repoDir\e]8;;\a\e[0m")
    echo -e "Repo path: $pathString"
fi

if [[ "$_arg_update" == "true" ]]; then
    echo -e "Updating repositories"
fi

if [[ "$_arg_status" == "true" ]]; then
    echo -e "\e[2mShowing git status for each repository\e[0m"
fi


# Collect issues
cd $_repoDir
_dotfiles=(
    "dotfiles"
    "dotfiles_private"
    "wdotfiles"
    "secure"
    "Tools"
    "tools"
    "Scripts"
    "scripts"
    "win-upgrade"
)
for _path in "${_dotfiles[@]}"; do
    [[ ! -d "$_path" ]] && continue

    # Check we have any changes
    if [[ ! $(git -C $_repoDir/$_path status | grep nothin) || $(git -C $_repoDir/$_path status | grep Untracked) ]]; then
        _has_changes="true"

        # if we have changes and want to commit them run the commit else just show the status
        if [[ "$_arg_commit" == "true" ]]; then
            _gitStatus="\e[2m$(git -C "$_repoDir/$_path" status --porcelain)\e[0m"
            git -C "$_repoDir/$_path" add --all
            git -C "$_repoDir/$_path" commit --all --quiet
            # check if successful
            if [[ $? -ne 0 ]]; then
                _error="true"
                _status+=("\e]8;;$_repoDir/$_path\a$_path\e]8;;\a\e[0m: \e[31mfailed to committing changes\e[0m")
                git -C "$_repoDir/$_path" reset --quiet
            else
                git -C "$_repoDir/$_path" push --quiet
                if [[ $? -ne 0 ]]; then
                    _error="true"
                    _status+=("\e]8;;$_repoDir/$_path\a$_path\e]8;;\a\e[0m: \e[31mfailed to push changes\e[0m")
                else 
                    _status+=("\e]8;;$_repoDir/$_path\a$_path\e]8;;\a\e[0m: committed and pushed changes")
                fi
            fi
            _status+=("$_gitStatus")
        else 
            _status+=("\e]8;;$_repoDir/$_path\a$_path\e]8;;\a\e[0m: uncommitted changes")
            _gitStatus="\e[2m$(git -C "$_repoDir/$_path" status --porcelain)\e[0m"
            _status+=("$_gitStatus")
        fi
        continue
    fi

    # Run updates if no changes are found
    if [[ "$_arg_update" == "true" ]]; then
        echo -e "\e[2mPulling updates for $_path\e[0m"
        _gitPull="$(git -C "$_repoDir/$_path" pull)"
        [[ $(echo $_gitPull | grep Already) ]] && continue
        _has_changes="true"
        _gitChanges="\e[2m$(git -C "$_repoDir/$_path" diff --name-only HEAD@{1})\e[0m"
        _status+=("\e]8;;$_repoDir/$_path\a$_path\e]8;;\a\e[0m: repository updated")
        _status+=("$_gitChanges")
    fi
done

# if install flag is set, run install scripts for dotfiles repo.
if [[ "$_arg_install_force" == "true" ]] || ([[ "$_arg_install" == "true" ]] && [[ "$_has_changes" == "true" ]]); then
    if [[ -f "$_repoDir/dotfiles/install" ]]; then
        bash "$_repoDir/dotfiles/install" "${_install_params[@]}"
    fi
fi

# Print sitrep
if [ ${#_status[@]} -gt 0 ]; then
    echo -e "\n\e[1mCurrent status:\e[0m"
    for _sitrep in "${_status[@]}"; do
        echo -e "$_sitrep"
    done
else
    echo -e "\n\e[1mCurrent status:\e[0m"
    echo "All good"
fi
