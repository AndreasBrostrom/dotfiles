export GTK_THEME=Adwaita:dark
export TERMINAL=terminator
export TERM=$TERMINAL

export EDITOR=nvim
export GIT_EDITOR=nvim
export DISPLAY=:0

# SSH Agent (set by gnome-keyring via systemd)
if [ -z "$SSH_AUTH_SOCK" ]; then
    export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/keyring/ssh"
fi

# Paths
[[ -d $HOME/Programs/bin      ]] && export PATH=$HOME/Programs/bin:$PATH
[[ -d $HOME/.bin              ]] && export PATH=$PATH:$HOME/.bin

# Android
if [ -d $HOME/.android ]; then
    export ANDROID_HOME=$HOME/.android/Sdk
    export ANDROID_SDK_HOME=$HOME/.android
    export ANDROID_AVD_HOME=$HOME/.android/avd
    export PATH=$PATH:$ANDROID_HOME/tools
    export PATH=$PATH:$ANDROID_HOME/tools/bin
    export PATH=$PATH:$ANDROID_HOME/emulator
    export PATH=$PATH:$ANDROID_HOME/platform-tools
fi

[[ -d $HOME/.yarn/bin         ]] && export PATH=$PATH:$HOME/.yarn/bin
[[ -d $HOME/.cargo/bin        ]] && export PATH=$PATH:$HOME/.cargo/bin

# GO
export GOPATH=$HOME/.cache/go

# Manager
[[ -d $HOME/Repositories/Manager/bin ]] && export PATH=$PATH:$HOME/Repositories/Manager/bin
