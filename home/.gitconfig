[core]
	editor = nvim
	autocrlf = false
	sshCommand = ssh -i ~/.ssh/andre_id_rsa
[user]
	name = AndreasBrostrom
	email = andreas.brostrom.ce@gmail.com
	signingkey = 1C9E39BBFB03BA98
[alias]
	root = rev-parse --show-toplevel
	ccl = rev-parse --verify HEAD
	ccs = rev-parse --short HEAD
	checkout-pr = "!bash github_checkout_pr"
	squash = "!bash git_squash"
[init]
	defaultBranch = main
[checkout]
	defaultRemote = origin
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[commit]
	gpgsign = true
[tag]
	gpgSign = true
